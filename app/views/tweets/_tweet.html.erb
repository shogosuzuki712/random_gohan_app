<div class="card">
  <div class="menu">
    <div class="menu-title">▼</div>
    <div class="sub-menu">
      <ul class="my-lists">
        <li><%= link_to '編集', edit_tweet_path(tweet.id), method: :get %></li>
        <li><%= link_to '削除', tweet_path(tweet.id), method: :delete, data: { confirm: "【確認】投稿を削除してもよろしいですか？" } %></li>
      </ul>
    </div>
  </div>
  <%= image_tag(tweet.image, class: :card__img)%>
    <p class="card__summary"><%= tweet.title%></p>
    <p class="card__summary"><%= tweet.text %></p>
</div>